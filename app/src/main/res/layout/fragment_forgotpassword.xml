<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--toolbar-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/Toobarforhotpassword"/>

    <!--Content-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d0ffffff"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:weightSum="6">




        <!--logo-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="334dp"
            android:layout_height="203dp"
            android:layout_weight="0"
            android:src="@drawable/qrcodelinechris"
            android:textAlignment="center" />

        <!--ID number Student 13 digit-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<icon-->
            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_help1" />
            <!--<Name-->
            <TextView
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:text="ติดต่อนายทะเบียน"
                android:textColor="@color/yellow"
                android:textSize="@dimen/h1"
                android:textStyle="bold" />
        </LinearLayout>


        <!--<<Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_user" />
            <!--<Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="คุณ กนกลดา อาภาคุณาสิน"
                android:textColor="@color/black"
                android:textSize="@dimen/h2" />


        </LinearLayout>


        <!--<Surname-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mail" />
            <!--<Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="appce@hotmail.com"
                android:textColor="@color/black"
                android:textSize="@dimen/h2" />
        </LinearLayout>


        <!--password-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone" />
            <!--<Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="093-2465535 หนู"
                android:textColor="@color/black"
                android:textSize="@dimen/h2" />
        </LinearLayout>


        <!--Confirm Password-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone" />
            <!--<Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="098-4644299 คริส"
                android:textColor="@color/black"
                android:textSize="@dimen/h2" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>